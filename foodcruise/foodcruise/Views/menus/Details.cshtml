@model foodcruise.Models.menu

@{
    ViewBag.Title = "Menu";
}

<h2>@Html.DisplayFor(model => model.restaurante1.nombre)</h2>
<h3>Menú: @Html.DisplayFor(model => model.nombre)</h3>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver", "Index", new { restaurante = Model.restaurante1.id })
</p>

<div>
    <hr />
    <img src="~/images/food_icon.png" width="120">
    <dl class="dl-horizontal">
        <dt>
            Nombre del menú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Fecha disponible
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            Tipo de menú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo)
        </dd>

        <dt>
            Hora del menú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.jornada1.nombre)
        </dd>

        <dt>
            Nombre del restaurante
        </dt>

        <dd>
            @Html.DisplayFor(model => model.restaurante1.nombre)
        </dd>

    </dl>
</div>

